<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <TextView
        android:id="@+id/welcomeTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="@color/appTextShadow"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Vitajte v aplikácii na správu vašich EČV"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/appTextColor"
        android:textSize="42sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/greenButton"
        android:textColor="@color/white"
        android:paddingLeft="26dp"
        android:paddingTop="14dp"
        android:paddingRight="26dp"
        android:paddingBottom="14dp"
        android:text="pokračuj"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/welcomeTextId"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextId"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="by Richard Labat"
        android:textAlignment="center"
        android:layout_margin="40dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="italic" />
</androidx.constraintlayout.widget.ConstraintLayout>